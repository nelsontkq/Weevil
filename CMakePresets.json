{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "default",
      "description": "Default configuration for the Weevil project",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_FLAGS_DEBUG": "-DWV_ENABLE_ASSERTS -DWV_LOG_LEVEL=4"
      }
    },
    {
      "name": "release",
      "description": "Release configuration for the Weevil project",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS_DEBUG": "-DWV_LOG_LEVEL=0"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "description": "Build the default (Debug) configuration"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "description": "Build the release configuration"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "description": "Run tests for the default (Debug) configuration"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "description": "Run tests for the release configuration"
    }
  ]
}